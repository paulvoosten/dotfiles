[module/mpd]
type = internal/mpd
format-online = <icon-prev> <icon-stop> <toggle> <icon-next> <icon-repeat> <icon-random> <label-time> <label-song>
format-offline = <label-offline>

icon-prev = " %{T3}%{T-} "
icon-seekb = " %{T3}%{T-} "
icon-stop = " %{T3}%{T-} "
icon-play = " %{T3}%{T-} "
icon-pause = " %{T3}%{T-} "
icon-seekf = " %{T3}%{T-} "
icon-next = " %{T3}%{T-} "
icon-random = " %{T3}%{T-} "
icon-repeat = " %{T3}%{T-} "

toggle-on-foreground = ${colors.base07}
toggle-off-foreground = ${colors.base03}

label-offline =
label-offline-foreground = ${colors.base07}

label-song = %title% - %artist%
label-song-maxlen = 64
label-song-ellipsis = true
label-song-font = 1

label-time = %elapsed% / %total%
label-time-font = 1


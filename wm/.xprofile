#!/bin/bash
case $HOSTNAME in
    arch-home) xrandr --output DP-0 --mode 3840x2160 --rate 60 --scale 0.666666666667x0.666666666667 --pos 0x0 --primary --output HDMI-0 --mode 2560x1440 --rate 60 --pos 2560x0;;
    arch-adcalls) xrandr --output DVI-D-1 --mode 1920x1080 --rate 60 --primary --output HDMI-1 --mode 3840x2160 --rate 30 --right-of DVI-D-1;;
esac
xidlehook --not-when-audio --not-when-fullscreen --timer 900 'betterlockscreen -l dimblur' '' &
xsetroot -cursor_name left_ptr &
setxkbmap -layout 'us(intl),us' &
picom -b &
dex -a &
sxhkd -c ~/.config/sxhkd/sxhkdrc{,_bspwm} &

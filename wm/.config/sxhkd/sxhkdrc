#
# wm independent hotkeys
#

# terminal emulator
super + Return
    termite

super + shift + Return
    id=$(cat /tmp/scratchid);\
	bspc node $id --flag hidden;bspc node -f $id

# program launcher
super + e
    rofi -modi "window,run,drun,ssh" -show drun

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# reload bspwm config
super + shift + r
    ~/.config/bspwm/bspwmrc

# quit bspwm normally
super + alt + Escape
    bspc quit

# close and kill
super + {_,shift + }q
    bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
    bspc desktop -l next

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
super + y
    bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# swap the current node and the biggest node
super + g
    bspc node -s biggest

# set the window state
super + {_,shift + }f
    state={floating,fullscreen}; \
    bspc query -N -n "focused.$\{state\}" && state=tiled; \
    bspc node -t "$state"

# set the node flags
super + ctrl + alt + {l,p,s}
    bspc node -g {locked,private,sticky}

# focus/swap the node in the given direction
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {pb,c,omma,period}
    bspc node -f @{parent,brother,first,second}

# focus the next/previous desktop
super + bracket{left,right}
    bspc desktop -f {prev,next}

# focus the next/previous node
alt + bracket{left,right}
    bspc node -f {prev,next}

# focus the next/previous local node
alt + shift + bracket{left,right}
    bspc node -f {prev,next}.local

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9, 10}'

# preselect the direction
super + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
    bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
    bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
    bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
    bspc node -v {-20 0,0 20,0 -20,20 0}

# reset gap and border size
super + equal
    bspc config border_width 2; bspc config window_gap 10

# remove gap and border size
super + shift + g
    bspc config border_width 0; bspc config window_gap 0

# increase gap size by 5
super + plus
    bspc config window_gap $((`bspc config window_gap` + 5 ))

# decrease gap size by 5
super + minus
    bspc config window_gap $((`bspc config window_gap` - 5 ))

# multimedia
XF86AudioPlay
    playerctl play-pause
#    mpc toggle

XF86AudioStop
    playerctl stop
#    mpc stop

XF86AudioNext
    playerctl next
#    mpc next

XF86AudioPrev
    playerctl previous
#    mpc prev

XF86AudioRaiseVolume
    playerctl volume 0.05+
#    mpc volume +5

XF86AudioLowerVolume
    playerctl volume 0.05-
#    mpc volume -5

# lock screen
ctrl + alt + l
    ~/.config/i3/lock.sh

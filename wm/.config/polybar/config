[colors]
base00 = ${xrdb:color0}
base01 = ${xrdb:color18}
base02 = ${xrdb:color19}
base03 = ${xrdb:color8}
base04 = ${xrdb:color20}
base05 = ${xrdb:color7}
base06 = ${xrdb:color21}
base07 = ${xrdb:color15}
base08 = ${xrdb:color1}
base09 = ${xrdb:color16}
base0A = ${xrdb:color3}
base0B = ${xrdb:color2}
base0C = ${xrdb:color6}
base0D = ${xrdb:color4}
base0E = ${xrdb:color5}
base0F = ${xrdb:color17}

[monitors]
primary = ${env:MONITOR}

[settings]
screenchange-reload = true

[global/wm]
margin-bottom = 0
margin-top = 0

[bar/top]
monitor = ${monitors.primary}
width = 100%
height = 24
background = ${colors.base00}
foreground = ${colors.base07}
border-bottom-size = 2
border-color = ${colors.base03}
line-size = 2
padding = 3
module-margin = 2
font-0 = Roboto Condensed:size=12;2
font-1 = Font Awesome 5 Free:style=Solid:size=10;2
font-2 = Font Awesome 5 Brands:size=10;2
modules-left = bspwm
modules-center = xwindow
modules-right = memory cpu volume packages date compton redshift tray powermenu
fixed-center = true
wm-restack = bspwm

[module/xwindow]
type = internal/xwindow
label = %title%
label-maxlen = 30

[module/bspwm]
type = internal/bspwm
enable-scroll = false
pin-workspaces = false
format = <label-state> <label-mode>
label-focused = %name%
label-focused-background = ${colors.base03}
label-focused-padding = 1
label-dimmed-focused-background = ${colors.base00}
label-dimmed-focused-foreground = ${colors.base04}
label-occupied = %name%
label-occupied-foreground = ${colors.base04}
label-occupied-padding = 1
label-dimmed-occupied-foreground = ${colors.base04}
label-urgent = %name%
label-urgent-foreground = ${colors.base08}
label-urgent-padding = 1
label-empty =
label-empty-foreground = ${colors.base03}
label-empty-padding = 1
label-monocle = M
label-monocle-padding-right = 1
label-locked = 
label-locked-padding-right = 1
label-private = 
label-private-padding-right = 1
label-sticky = 
label-sticky-padding-right = 1

[module/cpu]
type = internal/cpu
format = <label>
format-prefix = " "
format-prefix-foreground = ${colors.base03}
label = %percentage%%

[module/memory]
type = internal/memory
format = <label>
format-prefix = " "
format-prefix-foreground = ${colors.base03}
label = %percentage_used%%

[module/date]
type = internal/date
interval = 1
format-prefix = 
format-prefix-foreground = ${colors.base03}
label = %date% %time%
date =
date-alt = " %d-%m"
time = %H:%M
time-alt = %H:%M:%S

[module/volume]
type = internal/volume
format-volume = <ramp-volume> <label-volume>
format-muted = <label-muted>
format-muted-prefix = " "
format-muted-prefix-foreground = ${colors.base03}
label-muted = muted
label-volume = %percentage%%
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-foreground = ${colors.base03}

[module/powermenu]
type = custom/menu
label-open = 
label-close = 
label-separator = " "
menu-0-0 = 
menu-0-0-exec = bspc quit
;menu-0-1 =
;menu-0-1-exec = systemctl suspend
;menu-0-2 =
;menu-0-2-exec = systemctl hibernate
menu-0-1 = 
menu-0-1-exec = systemctl reboot
menu-0-2 = 
menu-0-2-exec = systemctl poweroff

[module/redshift]
type = custom/script
interval = 5
exec = ~/.config/polybar/modules/redshift.sh
click-left = ~/.config/polybar/modules/redshift-toggle.sh

[module/compton]
type = custom/script
interval = 5
exec = ~/.config/polybar/modules/compton.sh
click-left = ~/.config/polybar/modules/compton-toggle.sh

[module/packages]
type = custom/script
interval = 600
format = <label>
format-prefix = " "
format-prefix-foreground = ${colors.base03}
label = %output%
exec = ~/.config/polybar/modules/packages.sh
exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"

[module/tray]
type = custom/text
content = 
click-left = ~/.config/polybar/modules/tray.sh

; custom modules

[module/menu]
type = custom/text
content = 
content-foreground = ${colors.label}
click-left = "jgmenu_run >/dev/null 2>&1 &"

[module/packages]
type = custom/script
interval = 600
format-prefix = " "
format-prefix-foreground = ${colors.label}
exec = ~/.config/polybar/modules/packages
exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"

[module/picom]

; custom modules

[module/packages]
type = custom/script
interval = 600
format-prefix = 
format-prefix-foreground = ${colors.label}
format-prefix-padding-right = 1
exec = ~/.config/polybar/modules/packages
click-left = ~/.config/bspwm/toggle-visibility update-pkgs "alacritty -o window.class.general=update-pkgs -t Update -e yay"

[module/picom]
type = custom/script
interval = 5
exec = ~/.config/polybar/modules/picom
click-left = ~/.config/polybar/modules/picom-toggle

[module/powermenu]
type = custom/text
content-foreground = ${colors.critical}
click-left = rofi -modi 'Powermenu:~/.config/rofi/scripts/powermenu' -show Powermenu -theme ~/.cache/wal/powermenu.rasi -icon-theme 'Reversal-black-dark'
content = 襤

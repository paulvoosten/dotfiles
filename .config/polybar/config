[module/date]
type = internal/date
interval = 1
format = <label>
label = %date%%time%
date = ""
date-alt = "%a, %d %b %Y | "
time = %H:%M
time-alt = %H:%M:%S

[module/desktop]
type = internal/bspwm
enable-scroll = false
inline-mode = true
pin-workspaces = false
format = <label-state>
label-focused = %icon%
label-focused-padding = 1
label-focused-foreground = ${colors.label}
label-dimmed-focused-padding = ${self.label-focused-padding}
label-dimmed-occupied-foreground = ${colors.occupied}
label-occupied = ${self.label-focused}
label-occupied-foreground = ${colors.occupied}
label-occupied-padding= ${self.label-focused-padding}
label-urgent = ${self.label-focused}
label-urgent-foreground = ${colors.critical}
label-urgent-padding= ${self.label-focused-padding}
label-empty = ${self.label-focused}
label-empty-foreground = ${colors.empty}
label-empty-padding= ${self.label-focused-padding}
ws-icon-0 = web;
ws-icon-1 = term;
ws-icon-2 = code;
ws-icon-3 = data;
ws-icon-4 = chat;
ws-icon-5 = music;
ws-icon-6 = vm;
ws-icon-7 = game;
ws-icon-8 = rand;﯂
ws-icon-default = 

[module/memory]

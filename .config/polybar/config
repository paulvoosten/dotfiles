[colors]
background  = ${xrdb:color0}
critical    = ${xrdb:color1}
empty       = ${xrdb:color8}
foreground  = ${xrdb:color15}
label       = ${xrdb:color4}
occupied    = ${xrdb:color7}
stable      = ${xrdb:color2}
urgent      = ${xrdb:color3}

[settings]
screenchange-reload = true
format-foreground = ${colors.foreground}

[global/wm]
margin-bottom = 0
margin-top = 0

[bar/top]
width = 100%
height = 34
